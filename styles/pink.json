{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "title": "Blue",
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#F3686D",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#000000",
                    "name": "Secondary"
                },
                {
                    "slug": "Review",
                    "color": "#F16522",
                    "name": "review"
                },
                {
                    "slug": "background",
                    "color": "#F2F2F2",
                    "name": "Background"
                },
                {
                    "slug": "grey",
                    "color": "#828282",
                    "name": "Grey"
                },
                {
                    "slug": "Border",
                    "color": "#B5B5B5",
                    "name": "Border"
                },
                {
                    "name": "BG Color",
                    "color": "#FFFFFF",
                    "slug": "bg-color"
                },
                {
                    "name": "Button Hover",
                    "color": "#B70F14",
                    "slug": "btn-hover"
                }
            ],
            "duotone": [
                {
                    "colors": [
                        "#000000",
                        "#000000"
                    ],
                    "slug": "primary",
                    "name": "Primary"
                },
                {
                    "colors": [
                        "#F3686D",
                        "#F35157"
                    ],
                    "slug": "secondary",
                    "name": "Secondary"
                },
                {
                    "colors": [
                        "#FFFFFF",
                        "#FFFFFF"
                    ],
                    "slug": "tertiary",
                    "name": "Tertiary"
                }
            ]
        }
    },
    "styles": {
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--secondary)",
              "text": "var(--wp--preset--color--bg-color)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--btn-hover)",
                "text": "var(--wp--preset--color--bg-color)"
              }
            }
          }
        }
      }
}